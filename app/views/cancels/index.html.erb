		  	<%= f.text_field :mount_cont, size:"1", placeholder: "Monto" %>
		  	<%= f.text_field :paid_cont, size:"1", placeholder: "Estado" %>
			<%= f.submit "Buscar" %>
		<% end %>
	</div>
	
	<table>
		<tr>
			<!--<th><= sort_link(@search, :usuario, "Usuario") %></th>
