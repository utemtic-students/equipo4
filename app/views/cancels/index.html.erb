			<th><%= sort_link(@search, :created_at, "Fecha") %></th>
			<th><%= sort_link(@search, :mount, "Monto") %></th>
			<th><%= sort_link(@search, :paid, "Estado") %></th>
		</tr>
		<% @registros.each do |n| %>
			<tr>
				<!--<td><= n.usuario %></td>
				<td><= n.carrera %></td>-->
				<td><%= n.linkFile %></td>
				<td><%= n.created_at %></td>
				<td>$<%= n.mount %></td>
				<% if n.paid == 1
						@paid = "Pagado"
					else
						@paid = "Adeudo"
					end%>
				<td><%= @paid %></td>
			</tr>
		<% end %>
