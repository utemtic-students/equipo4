<div class="login">
  <h1>SIGN UP</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, class:"inputs" %>
  <%= f.label :email %>
  <%= f.email_field :email, class:"inputs" %>
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>
  <%= f.password_field :password, autocomplete: "off", class:"inputs" %>
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class:"inputs" %>
  <%= f.submit "sign up", class:"btn btn-primary btn-block btn-large" %><br>
  <%= link_to "Back", :back %>
<% end %>
